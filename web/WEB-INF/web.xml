<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <!--Declaring Servlet No 3-->
    <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>com.Servlets.MyFirstServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>first</servlet-name> 
        <url-pattern>/web</url-pattern>       
    </servlet-mapping>
    
    <!--Declaring Servlet No 2-->
    <servlet>
        <servlet-name>second</servlet-name>
        <servlet-class>com.Servlets.MySecondServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>second</servlet-name> 
        <url-pattern>/Gen</url-pattern>       
    </servlet-mapping>
    
    <!--Declaring Servlet No 3-->
    <servlet>
        <servlet-name>third</servlet-name>
        <servlet-class>com.Servlets.MyThirdServlet</servlet-class>
    </servlet>
    <!--mapping-->
    <servlet-mapping>
        <servlet-name>third</servlet-name> 
        <url-pattern>/htp</url-pattern>       
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
